<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/title_prepare_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_prepare_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_prepare_view"
        android:layout_alignStart="@+id/title_prepare_view"
        android:layout_marginStart="0dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toEndOf="@id/title_prepare_view"
        />


    <Button
        android:id="@+id/TIME_view_prepare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/TIME_view_prepare"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/time_prepare_view"
        app:layout_constraintLeft_toRightOf="@id/time_prepare_view"

        />

    <Button
        android:id="@+id/print_view_prepare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/PRINT_view_prepare"
        android:layout_alignStart="@id/TIME_view_prepare"
        android:layout_below="@id/TIME_view_prepare"
        />

    <TextView
        android:id="@+id/text_prepare_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/print_view_prepare"
        android:layout_alignStart="@id/title_prepare_view"
        android:textSize="16sp"
        android:textIsSelectable="true"
       />

</RelativeLayout>